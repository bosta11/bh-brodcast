<html>
	<head>
		<title>برودكاست - لوحة التحكم</title>
		<link rel="stylesheet" type="text/css" href="<%= url ('style.css') %>">
		<meta charset="UTF-8">
		<link rel="icon" type="img/png"href="https://cdn3.iconfinder.com/data/icons/internet-and-web-4/78/internt_web_technology-14-128.png">
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	</head>
	
	<body>
		<div id="wrapper">
			<div id="header">
				<div id="title">
					<div id="page-name">
						<a href =""><h1 id="tit">اعدادات البرودكاست</h1></a>
					</div>
					<div id="navview">
					</div>
			</div>
			<div id="navbar">
				<ul id="nav">
					<a href="/"><li class="nav"><label>زيارة الموقع</label></li></a>
					<a href="/admin"><li class="nav"><label>الرئيسية</label></li></a>
					<a href="/admin/brdcast/add"><li class="nav"><label>اضافة برودكاست</label></li></a>
					<li class="nav" id="main-nav"><label>اعدادات البرودكاست</label></li>
					<a href="/admin/brdcast/setting"><li class="nav" id="current-page"><label>البرودكستات المفعلة</label></li></a>
					<a href="/admin/brdcast/setting/activation"><li class="nav"><label>تفعيل البرودكاستات</label></li></a>
					<a href="/admin/messages"><li class="nav"><label>رسائل الزوار</label></li></a>
					<a href="/logout"><li class="nav"><label>تسجيل الخروج</label></li></a>
				</ul>
			</div>
			<div id="admin-main">
				<div id="last-brd">
					<h2 id="last-brd-title">البرودكستات</h2>
					<table border=1px style="width:100%;" id="last-brd-table">
						<tr>
							<thead>
							<th class="last-brd-brd">البرودكاست</th>
							<th>القسم</th>
							<th>اسم المضيف</th>
							<th>رقم الهاتف</th>
							<th class="table-edit-post">تعديل</th>
							<th class="table-del-post">حذف</th>
						</tr>
						<% @brdcast_edit.each do |bs| %>
						<tr>
							<td class="last-brd-brd"><%= bs[:details] %></td>
							<td><%= bs[:category] %></td>
							<td><%= bs[:user_name] %></td>
							<td><%= bs[:user_phone] %></td>
							<td class="table-edit-post"><a href="/admin/brdcast/setting/edit/<%= bs[:id] %>"><div class="editpost"></div></a></td>
							<td class="table-del-post"><a href="/admin/brdcast/setting/del/<%= bs[:id] %>"><div class="deletepost"></div></a></td>
						</tr>
						<% end %>
					</table>
					</div>
			</div>
			<footer>
				<a href=""><h3>تصميم وبرمجة البوسطة</h3></a>
			</footer>
		</div>
	</body>
	<script> 
	$(document).ready(function(){
	  $("#navview").click(function(){
	    $("#navbar").slideToggle("slow");
	  });
	});
	</script>
</html>